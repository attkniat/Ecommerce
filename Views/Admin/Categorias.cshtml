@model List<ProjectEcommerce.DAL.Tbl_Category>
@{
	ViewBag.Title = "Categorias";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
	<!-- Breadcrumbs-->
	<!-- DataTables Example -->
	<div class="card mb-3">
		<div class="card-header">
			<i class="fas fa-table"></i>
			Detalhes da Categoria
			<a href="../Admin/AddCategory" class="btn btn-info pull-right fa fa-plus"> Adicionar Novo</a>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>N°</th>
							<th>Nome da Categoria</th>
							<th>Ação</th>

						</tr>
					</thead>
					<tfoot>
						<tr>
							<th>N°</th>
							<th>Nome da Categoria</th>
							<th>Ação</th>
						</tr>
					</tfoot>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@(Model.IndexOf(item) + 1)</td>
								<td>@item.CategoryName</td>
								<td>
									@Html.ActionLink("Editar", "CategoriaEdit", new { catId = item.CategoryId })
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
